# ============================================================================
# SCBE-AETHERMOORE Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# Your keys are primary; fallback providers are used if primary fails
# ============================================================================

# Environment & provider binding
SCBE_ENV=prod
SCBE_PROVIDER_ID=provider.example
SCBE_MODEL_ID=model.v1

# ============================================================================
# AI PROVIDER API KEYS (Your Keys = Primary)
# ============================================================================
# Set your preferred provider order (comma-separated, first = primary)
# Options: anthropic, openai, google, mistral, cohere
SCBE_PROVIDER_PRIORITY=anthropic,openai,google

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-...your-key-here
OPENAI_MODEL=gpt-4o

# Google (Gemini)
GOOGLE_API_KEY=AIza...your-key-here
GOOGLE_MODEL=gemini-2.0-flash

# Mistral (Optional fallback)
MISTRAL_API_KEY=...your-key-here
MISTRAL_MODEL=mistral-large-latest

# Cohere (Optional fallback)
COHERE_API_KEY=...your-key-here
COHERE_MODEL=command-r-plus

# ============================================================================
# PROVIDER BEHAVIOR
# ============================================================================
# Max retries before falling back to next provider
SCBE_PROVIDER_MAX_RETRIES=2

# Timeout per request (ms)
SCBE_PROVIDER_TIMEOUT_MS=30000

# Enable fallback chain (true = try next provider on failure)
SCBE_PROVIDER_FALLBACK_ENABLED=true

# Rate limit (requests per minute, 0 = unlimited)
SCBE_PROVIDER_RATE_LIMIT=60

# ============================================================================
# KMS / HSM (replace with your values)
# ============================================================================
SCBE_KMS_KID=key-v1
SCBE_KMS_URI=mem://dev # replace with aws-kms://, gcp-kms://, vault://, etc.

# ============================================================================
# REPLAY PROTECTION / CACHE
# ============================================================================
SCBE_REPLAY_TTL_SECONDS=600
SCBE_REPLAY_BLOOM_BITS=2048
SCBE_REPLAY_BLOOM_HASHES=4

# ============================================================================
# REDIS (for distributed fleet orchestration)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================================
# METRICS & TELEMETRY
# ============================================================================
SCBE_METRICS_BACKEND=stdout # change to datadog|prom|otlp

# ============================================================================
# API CONFIGURATION (REQUIRED in production)
# ============================================================================
# Format: "key1:user1,key2:user2"
SCBE_API_KEYS=your_api_key_here:your_username

# CORS Configuration (comma-separated origins)
# Use "*" for development, specific domains for production
SCBE_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
