# ============================================================================
# SCBE-AETHERMOORE Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# Your keys are primary; fallback providers are used if primary fails
# ============================================================================

# Environment & provider binding
SCBE_ENV=prod
SCBE_PROVIDER_ID=provider.example
SCBE_MODEL_ID=model.v1

# ============================================================================
# AI PROVIDER API KEYS (Your Keys = Primary)
# ============================================================================
# Set your preferred provider order (comma-separated, first = primary)
# Options: anthropic, openai, google, mistral, cohere
SCBE_PROVIDER_PRIORITY=anthropic,openai,google

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-...your-key-here
OPENAI_MODEL=gpt-4o

# Google (Gemini)
GOOGLE_API_KEY=AIza...your-key-here
GOOGLE_MODEL=gemini-2.0-flash

# Mistral (Optional fallback)
MISTRAL_API_KEY=...your-key-here
MISTRAL_MODEL=mistral-large-latest

# Cohere (Optional fallback)
COHERE_API_KEY=...your-key-here
COHERE_MODEL=command-r-plus

# ============================================================================
# PROVIDER BEHAVIOR
# ============================================================================
# Max retries before falling back to next provider
SCBE_PROVIDER_MAX_RETRIES=2

# Timeout per request (ms)
SCBE_PROVIDER_TIMEOUT_MS=30000

# Enable fallback chain (true = try next provider on failure)
SCBE_PROVIDER_FALLBACK_ENABLED=true

# Rate limit (requests per minute, 0 = unlimited)
SCBE_PROVIDER_RATE_LIMIT=60

# ============================================================================
# KMS / HSM (replace with your values)
# ============================================================================
SCBE_KMS_KID=key-v1
SCBE_KMS_URI=mem://dev # replace with aws-kms://, gcp-kms://, vault://, etc.

# ============================================================================
# REPLAY PROTECTION / CACHE
# ============================================================================
SCBE_REPLAY_TTL_SECONDS=600
SCBE_REPLAY_BLOOM_BITS=2048
SCBE_REPLAY_BLOOM_HASHES=4

# ============================================================================
# REDIS (for distributed fleet orchestration)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================================
# METRICS & TELEMETRY
# ============================================================================
SCBE_METRICS_BACKEND=stdout # change to datadog|prom|otlp

# ============================================================================
# API CONFIGURATION (REQUIRED in production)
# ============================================================================
# Format: "key1:user1,key2:user2"
SCBE_API_KEYS=your_api_key_here:your_username
SCBE_BROWSER_WEBHOOK_URL=http://127.0.0.1:8001/v1/integrations/n8n/browse
#
# Browser Agent Keys (for agents/browser/main.py and n8n bridge)
# Supports: BROWSER_AGENT_API_KEYS / SCBE_API_KEYS (pair format key:user)
# Single key format also supported for single-key setups.
BROWSER_AGENT_API_KEYS=
N8N_API_KEY=
N8N_WEBHOOK_TOKEN=

# CORS Configuration (comma-separated origins)
# Use "*" for development, specific domains for production
SCBE_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ============================================================================
# PLATFORM INTEGRATIONS
# ============================================================================

# Hugging Face (model hosting + inference)
HUGGINGFACE_API_KEY=hf_...your-key-here
HUGGINGFACE_TOKEN=hf_...your-token-here
HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co

# Notion (knowledge base sync)
NOTION_API_KEY=secret_...your-key-here
NOTION_DATABASE_ID=your-database-id
NOTION_PAGE_ID=your-page-id

# Google Cloud (storage + compute)
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AWS (deployment + Lambda)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...your-key-here
AWS_SECRET_ACCESS_KEY=...your-secret-here

# Zapier (workflow automation)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/...
ZAPIER_API_KEY=...your-key-here

# Airtable (structured data management)
AIRTABLE_API_KEY=pat...your-key-here
AIRTABLE_BASE_ID=app...your-base-id
AIRTABLE_TABLE_NAME=your-table-name

# GitHub (already set by CI, override for local dev)
GITHUB_TOKEN=ghp_...your-token-here
GITHUB_REPO=your-org/SCBE-AETHERMOORE

# ============================================================================
# MEMORY GOVERNANCE SYSTEM
# ============================================================================
MEMORY_SYNC_INTERVAL=30000
KNOWLEDGE_GRAPH_BACKEND=neo4j
PROVENANCE_TRACKING_ENABLED=true

# ============================================================================
# SECURITY (Post-Quantum Cryptography)
# ============================================================================
SCBE_ENCRYPTION_ALGORITHM=ml-kem-768
SCBE_SIGNATURE_ALGORITHM=ml-dsa-65
JWT_SECRET=...your-jwt-secret-here

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
SCBE_METRICS_ENABLED=true

# ============================================================================
# DEVELOPMENT
# ============================================================================
SCBE_DEV_MODE=false
SCBE_LOG_LEVEL=info
SCBE_DEBUG=false
SCBE_VERBOSE=false

# ============================================================================
# PROJECT INFO
# ============================================================================
SCBE_PATENT_NUMBER=63/961,403
SCBE_PROJECT_VERSION=3.2.4
