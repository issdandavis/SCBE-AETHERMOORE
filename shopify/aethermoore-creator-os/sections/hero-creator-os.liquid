<section
  class="aether-hero"
  data-background-mode="{{ section.settings.background_mode }}"
  data-fractal-intensity="{{ section.settings.fractal_intensity }}"
  data-grid-density="{{ section.settings.blueprint_grid_density }}"
>
  <div class="aether-hero__bg"></div>
  <div class="aether-hero__inner">
    <div class="aether-hero__content">
      <p class="aether-kicker">{{ section.settings.kicker }}</p>
      <h2 class="aether-hero__title">{{ section.settings.title }}</h2>
      <p class="aether-hero__subtitle">{{ section.settings.subtitle }}</p>
      {% if section.settings.show_parameters %}
        <div class="aether-hero__params">
          {% render 'parameter-readout', label: 'Coherence', value: section.settings.param_coherence %}
          {% render 'parameter-readout', label: 'd*', value: section.settings.param_dstar %}
          {% render 'parameter-readout', label: 'H_eff', value: section.settings.param_cost %}
        </div>
      {% endif %}
      <div class="aether-hero__actions">
        <a class="aether-btn aether-btn--primary" href="{{ section.settings.primary_cta_url }}">{{ section.settings.primary_cta_label }}</a>
        <a class="aether-btn aether-btn--secondary" href="{{ section.settings.secondary_cta_url }}">{{ section.settings.secondary_cta_label }}</a>
      </div>
      {% render 'glyph-divider' %}
    </div>
    <div class="aether-hero__media">
      {% if section.settings.hero_image != blank %}
        {{
          section.settings.hero_image
          | image_url: width: 1400
          | image_tag: class: 'aether-hero__img', loading: 'lazy'
        }}
      {% else %}
        {{
          'spiralverse-hero.png'
          | asset_url
          | image_tag: class: 'aether-hero__img', alt: 'Spiralverse hero art', loading: 'lazy', width: 1400, height: 900
        }}
      {% endif %}
      {% if section.settings.show_signed_zero %}
        <div class="aether-hero__icon">{% render 'signed-zero-icon' %}</div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Creator OS",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Aethermore Creator OS"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Frontend For Your Universe"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Render your canonical SCBE, lore, and commercial layers from one governed storefront shell."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Grok Image / Hero Art"
    },
    {
      "type": "checkbox",
      "id": "show_signed_zero",
      "label": "Show signed-zero icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_parameters",
      "label": "Show SCBE parameter readouts",
      "default": true
    },
    {
      "type": "text",
      "id": "param_coherence",
      "label": "Coherence value",
      "default": "0.82"
    },
    {
      "type": "text",
      "id": "param_dstar",
      "label": "d* value",
      "default": "0.34"
    },
    {
      "type": "text",
      "id": "param_cost",
      "label": "H_eff value",
      "default": "1.41"
    },
    {
      "type": "select",
      "id": "background_mode",
      "label": "Background mode",
      "default": "spiralverse_gradient",
      "options": [
        {
          "value": "spiralverse_gradient",
          "label": "Spiralverse gradient"
        },
        {
          "value": "glyph_grid",
          "label": "Glyph grid"
        },
        {
          "value": "image_overlay",
          "label": "Image overlay"
        }
      ]
    },
    {
      "type": "range",
      "id": "fractal_intensity",
      "label": "Fractal intensity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "blueprint_grid_density",
      "label": "Blueprint grid density",
      "min": 4,
      "max": 40,
      "step": 2,
      "default": 14
    },
    {
      "type": "text",
      "id": "primary_cta_label",
      "label": "Primary button label",
      "default": "Open Codex"
    },
    {
      "type": "url",
      "id": "primary_cta_url",
      "label": "Primary button URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_label",
      "label": "Secondary button label",
      "default": "View Blueprint"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Creator OS"
    }
  ]
}
{% endschema %}
