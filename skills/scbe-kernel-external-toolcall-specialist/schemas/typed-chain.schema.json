{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scbe/typed-chain.schema.json",
  "title": "SCBE Typed Chain",
  "type": "object",
  "required": ["chain"],
  "additionalProperties": false,
  "properties": {
    "chain": {
      "type": "object",
      "required": ["id", "name", "repo", "steps"],
      "additionalProperties": false,
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "name": {"type": "string", "minLength": 1},
        "repo": {"type": "string", "minLength": 1},
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              {"$ref": "#/$defs/toolStep"},
              {"$ref": "#/$defs/llmStep"},
              {"$ref": "#/$defs/gateStep"}
            ]
          }
        }
      }
    }
  },
  "$defs": {
    "toolStep": {
      "type": "object",
      "required": ["id", "type", "tool", "input", "output_key"],
      "additionalProperties": false,
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "type": {"const": "tool"},
        "tool": {"type": "string", "minLength": 1},
        "input": {"type": "object"},
        "output_key": {"type": "string", "minLength": 1},
        "needs_configuration": {"type": "boolean"},
        "domain": {"type": "string"}
      }
    },
    "llmStep": {
      "type": "object",
      "required": ["id", "type", "model", "tongue", "input_from", "output_key"],
      "additionalProperties": false,
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "type": {"const": "llm"},
        "model": {"type": "string", "minLength": 1},
        "tongue": {"type": "string", "enum": ["KO", "AV", "RU", "CA", "UM", "DR"]},
        "input_from": {"type": "string", "minLength": 1},
        "output_key": {"type": "string", "minLength": 1}
      }
    },
    "gateStep": {
      "type": "object",
      "required": ["id", "type", "condition", "on_true", "on_false"],
      "additionalProperties": false,
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "type": {"const": "gate"},
        "condition": {"type": "string", "minLength": 1},
        "on_true": {"type": "string", "minLength": 1},
        "on_false": {"type": "string", "minLength": 1}
      }
    }
  }
}
