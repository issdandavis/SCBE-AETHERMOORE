{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SCBE Full System Layer Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at_utc",
    "canonical_repo",
    "layers",
    "consolidation_priorities",
    "secret_dependencies"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "generated_at_utc": {
      "type": "string"
    },
    "canonical_repo": {
      "type": "string",
      "minLength": 1
    },
    "layers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "name",
          "status",
          "repos",
          "paths",
          "depends_on",
          "last_verified_commit"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^L\\d+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "implemented",
              "implemented_with_config",
              "partial",
              "conceptual"
            ]
          },
          "repos": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "paths": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^L\\d+$"
            }
          },
          "last_verified_commit": {
            "type": [
              "string",
              "null"
            ],
            "pattern": "^[0-9a-f]{7,40}$"
          }
        }
      }
    },
    "consolidation_priorities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "secret_dependencies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
